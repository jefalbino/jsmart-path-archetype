<?xml version="1.0" encoding="UTF-8"?>
<web-config>
    <package-scan>${package}</package-scan>

    <session-timeout>30</session-timeout>

    <welcome-url>/room</welcome-url>

    <url-patterns>
        <url-pattern>/msgs/*</url-pattern>
        <url-pattern>/room/*</url-pattern>
    </url-patterns>

    <message-files>
        <message-file>texts</message-file>
    </message-files>

    <default-locale>en</default-locale>
</web-config>